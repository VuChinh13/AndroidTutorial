<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:fitsSystemWindows="true"
    tools:context=".audioplayer.music.paywall.PaywallSale30WeeklyActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_39sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        android:src="@drawable/ic_close_sale30_weekly"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintWidth_percent="0.9"
        app:srcCompat="@drawable/img_paywall_sale30_weekly" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintRight_toRightOf="@id/imgBackground"
        app:layout_constraintTop_toTopOf="@id/imgBackground"
        app:layout_constraintWidth_percent="0.7"
        app:srcCompat="@drawable/img_description_30off" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClaimOffer"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/bg_button_claim_offer_sale30_weekly"
        android:fontFamily="@font/funnelsans_extrabold"
        android:text="CLAIM OFFER"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@id/imgBackground"
        app:layout_constraintStart_toStartOf="@id/imgBackground"
        app:layout_constraintTop_toBottomOf="@id/imgBackground" />

    <androidx.cardview.widget.CardView
        android:id="@+id/txtPriceDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="#7308080E"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="@id/imgContent"
        app:layout_constraintRight_toRightOf="@id/imgContent"
        app:layout_constraintTop_toBottomOf="@id/imgContent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/funnelsans_semibold"
            android:gravity="center_horizontal"
            android:padding="@dimen/_8sdp"
            android:text="Try 3 days for FREE, then 8.99$ per\nweek. Auto renew, cancel anytime"
            android:textColor="#F3F3FC"
            android:textSize="@dimen/_12sdp" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPolicy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/funnelsans_bold"
        android:gravity="center"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="@string/policy"
        android:textColor="#EAF5F8"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="@id/btnClaimOffer"
        app:layout_constraintStart_toStartOf="@id/btnClaimOffer"
        app:layout_constraintTop_toBottomOf="@id/btnClaimOffer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTileError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/funnelsans_semibold"
        android:text="We couldnâ€™t load the information"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnTryAgain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgBackground"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/funnelsans_regular"
        android:text="@string/try_again_text"
        android:textColor="#CCFFF8F8"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/txtTileError"
        app:layout_constraintStart_toStartOf="@id/txtTileError"
        app:layout_constraintTop_toBottomOf="@id/pbClaimOffer" />

    <ProgressBar
        android:id="@+id/pbClaimOffer"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:indeterminateTint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnClaimOffer"
        app:layout_constraintEnd_toEndOf="@+id/btnClaimOffer"
        app:layout_constraintStart_toStartOf="@+id/btnClaimOffer"
        app:layout_constraintTop_toTopOf="@+id/btnClaimOffer" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>