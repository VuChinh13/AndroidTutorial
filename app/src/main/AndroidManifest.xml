<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Chạy test nội dung nào thì cho intent-filter với 2 thuôc tính là .MAIN và .LAUNCHER -->
    <!-- Quyền đọc file âm thanh trong bộ nhớ (Android 13 trở lên) -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" /> <!-- Quyền đọc bộ nhớ ngoài (cho Android 12 trở xuống) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidTutorial">
        <activity
            android:name=".features.layout.NoteHomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.layout.summary.SummaryActivity"
            android:exported="false" />
        <activity
            android:name=".features.layout.LinearLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".features.layout.ConstraintLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".features.permissions.PermissionActivity"
            android:exported="false" />
        <activity
            android:name=".features.launchmode.MainActivity"
            android:exported="false" />
        <activity
            android:name=".features.launchmode.SingleInstanceActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".features.launchmode.SingleTaskActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".features.launchmode.SingleTopActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".features.launchmode.StandardActivity"
            android:exported="false"
            android:launchMode="standard" />
        <activity
            android:name=".features.navigation.activityresultlauncher.SecondaryResultActivity"
            android:exported="false" />
        <activity
            android:name=".features.navigation.activityresultlauncher.FirstResultActivity"
            android:exported="true" />
        <activity
            android:name=".features.navigation.bundle.SecondaryBundleActivity"
            android:exported="false" />
        <activity
            android:name=".features.navigation.bundle.FirstBundleActivity"
            android:exported="false" />
        <activity
            android:name=".features.navigation.intent.SecondaryActivity"
            android:exported="false" />
        <activity
            android:name=".features.navigation.intent.FirstActivity"
            android:exported="false" />
        <activity
            android:name=".features.lifecycle.LifecycleActivity"
            android:exported="false" />
    </application>

</manifest>